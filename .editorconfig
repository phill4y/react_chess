# https://EditorConfig.org

root = true

# Default
[*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
# insert_final_newline = true
end_of_line = lf

# Javascript
[*.{js,jsx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false
